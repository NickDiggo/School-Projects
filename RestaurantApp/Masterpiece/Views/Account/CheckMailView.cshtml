@{
    ViewBag.Title = "E-mail Verificatie";
    Layout = "_Layout";
}

<!-- <CHANGE> Added full-screen background wrapper -->
<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #f8f7f4; z-index: -1;"></div>

<section class="py-5" style="display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <!-- Card -->
                <div class="border rounded-4 p-5 bg-white shadow-sm" style="border-color: #e0dcd5;">
                    
                    <!-- Header -->
                    <div class="text-center mb-5">
                        <div class="mb-4">
                            <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin: 0 auto; display: block;">
                                <path d="M32 2C15.4 2 2 15.4 2 32s13.4 30 30 30 30-13.4 30-30S48.6 2 32 2zm-2 45l-12-12 2.8-2.8L30 41.4l19.2-19.2L52 24.2 30 46z" fill="#c9a961"/>
                            </svg>
                        </div>
                        <h1 class="display-5 fw-lighter alex gold-soft mb-3">
                            Controleer je e-mail
                        </h1>
                        <p class="lead fw-normal raleway text-muted">
                            Controleer alstublieft je mailbox
                        </p>
                    </div>

                    <!-- Message -->
                    <div class="alert rounded-3 p-4 mb-4" style="background-color: #f0f8f5; border: 1px solid #c9a961; border-left: 4px solid #c9a961;">
                        <p class="raleway mb-0" style="color: #2c3e50;">
                            We hebben een e-mail naar je adres verzonden. Volg alstublieft de link in de e-mail om je account te verifiëren.
                        </p>
                    </div>

                    <!-- Back to Login Link -->
                    <div class="text-center pt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none fw-semibold raleway" style="color: #2c3e50;">
                            ← Terug naar Inloggen
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

