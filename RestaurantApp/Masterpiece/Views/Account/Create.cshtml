@model AccountCreateViewModel

@{
    ViewData["Title"] = "Nieuw account";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="p-4 rounded shadow-sm bg-blue-soft" style="max-width:700px; width:100%;">
        <h2 class="text-center twinkle gold-soft mb-4">Nieuw account aanmaken</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Voornaam" class="form-label gold-soft"></label>
                        <input asp-for="Voornaam" class="form-control" />
                        <span asp-validation-for="Voornaam" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adres" class="form-label gold-soft"></label>
                        <input asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label asp-for="Postcode" class="form-label gold-soft"></label>
                                <input asp-for="Postcode" class="form-control" />
                                <span asp-validation-for="Postcode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <label asp-for="Gemeente" class="form-label gold-soft"></label>
                                <input asp-for="Gemeente" class="form-control" />
                                <span asp-validation-for="Gemeente" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LandId" class="form-label gold-soft"></label>
                        <select asp-for="LandId" asp-items="Model.Landen" class="form-select"></select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Achternaam" class="form-label gold-soft"></label>
                        <input asp-for="Achternaam" class="form-control" />
                        <span asp-validation-for="Achternaam" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Huisnummer" class="form-label gold-soft"></label>
                        <input asp-for="Huisnummer" class="form-control" />
                        <span asp-validation-for="Huisnummer" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label gold-soft"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label gold-soft"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @{
                        if (User.IsInRole("Eigenaar"))
                        {
                            <div class="mb-4">
                                <label asp-for="RolId" class="form-label gold-soft"></label>
                                <select asp-for="RolId" asp-items="Model.Rollen" class="form-select"></select>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between gap-2">
                <button type="submit" class="btn bg-blue-deep gold raleway border-gold border border-1 flex-fill">Aanmaken</button>
                <a asp-controller="Account" asp-action="Index" class="btn bg-blue-deep gold raleway border-gold border border-1 flex-fill text-center">Terug</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
