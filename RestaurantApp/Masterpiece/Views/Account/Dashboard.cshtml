@model Restaurant.ViewModels.AccountDashboardViewModel
@inject UserManager<CustomUser> UserManager
@{
    ViewData["Title"] = "Mijn account";

    // Sorteren van reservaties: eerst op datum, daarna op tijdslotnaam
    var gesorteerdeReservaties = Model.Reservaties
        .OrderBy(r => r.Datum)         // vroegste datum eerst
        .ThenBy(r => r.TijdslotNaam)   // tijdslot alfabetisch
        .ToList();
}

<h1 class="mb-3">Mijn account</h1>
<div class="d-flex justify-content-center mt-5">
    <div class="p-4 rounded shadow-sm bg-blue-soft" style="max-width:900px; width:100%;">

        <div class="row g-4">
            <div class="col-lg-8">

                <!-- Persoonlijke gegevens -->
                <div class="mb-4">
                    <h2>Persoonlijke gegevens</h2>
                    <div class="border-bottom pb-3 mb-0 bg-white text-black rounded p-3">
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Naam</div>
                            <div class="col-sm-8">@Model.Voornaam @Model.Achternaam</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">E-mailadres</div>
                            <div class="col-sm-8">@Model.Email</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Adres</div>
                            <div class="col-sm-8">
                                @Model.Adres @Model.Huisnummer<br />
                                @Model.Postcode @Model.Gemeente<br />
                                @Model.LandNaam
                            </div>
                        </div>
                       

                        <div class="mt-3 d-flex flex-wrap gap-2">
                            <a asp-action="Edit"
                               asp-route-id="@UserManager.GetUserId(User)"
                               class="btn bg-blue-deep gold raleway border-gold border border-1 p-2">
                                <i class="bi bi-pencil-square fs-5"></i>
                            </a>


                            <button type="button"
                                    class="btn btn-danger w-10 mt-3">
                                Wachtwoord wijzigen
                                </button>
                            <button type="button"
                                    class="btn btn-danger w-10 mt-3"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteAccountModal">
                                Account verwijderen
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Mijn reserveringen -->
                <div class="mb-4">
                    <h2>Mijn reserveringen</h2>
                    <div class="border-bottom pb-3 mb-0 bg-white text-black rounded p-3">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Datum</th>
                                        <th>Tijd</th>
                                        <th>Personen</th>
                                        <th>Tafels</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (gesorteerdeReservaties.Any())
                                    {
                                        foreach (var r in gesorteerdeReservaties)
                                        {
                                            <tr>
                                                <td>@(r.Datum?.ToString("dd/MM/yyyy") ?? "-")</td>
                                                <td>@r.TijdslotNaam</td>
                                                <td>@r.AantalPersonen</td>
                                                <td>
                                                    @(r.TafelNummers != null && r.TafelNummers.Any(t => t != "-")
                                                                                                ? string.Join(", ", r.TafelNummers)
                                                                                                : "-")
                                        </td>
                                        <td>
                                            @* Knop alleen tonen als er tafels zijn en MagBestellen true is *@
                                            @if (r.MagBestellen && r.TafelNummers != null && r.TafelNummers.Any(t => t != "-"))
                                                    {
                                                        <a class="btn btn-success"
                                                           asp-controller="Menu"
                                                           asp-action="Index"
                                                           asp-route-reservatieId="@r.ReservatieId">
                                                            Bestellen
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">
                                                Je hebt nog geen reserveringen.
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-4"> 

                <div class="mb-4">
                    <h2>Snelle acties</h2>
                    <div class="border-bottom pb-3 mb-0 bg-white text-black rounded p-3">
                        <div class="d-grid gap-2">
                            <a asp-controller="Reservatie"
                               asp-action="Reserveren"
                               class="btn bg-gold text-white">
                                Nieuwe reservering maken
                            </a>

                            <a href="#"
                               class="btn btn-outline-danger js-logout-trigger">
                                Afmelden
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-blue-soft border-0 rounded-4 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title twinkle gold-soft" id="deleteAccountLabel">
                    Account verwijderen
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Sluiten"></button>
            </div>

            <div class="modal-body text-light raleway">
                <p class="mb-0">
                    Ben je zeker dat je je account wilt verwijderen?<br />
                    Dit maakt je gegevens onbruikbaar en je kunt nadien niet meer inloggen.
                </p>
            </div>

            <div class="modal-footer border-0 pt-0">
                <div class="d-flex w-100 gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary w-50 fw-semibold"
                            data-bs-dismiss="modal">
                        Annuleren
                    </button>

                    <form asp-controller="Account"
                          asp-action="Delete"
                          method="post"
                          class="w-50 d-inline-block">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100 fw-semibold">
                            Ja, verwijder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
