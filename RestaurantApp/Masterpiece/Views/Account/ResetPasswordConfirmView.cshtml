@model ResetPasswordViewModel

@{
    ViewBag.Title = "Wachtwoord Herstellen";
}
<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #f8f7f4; z-index: -1;"></div>
<section class="py-5" style="display: flex; align-items: center; background-color: #f8f7f4;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <!-- Header -->
                <div class="text-center mb-5">
                    <h1 class="display-4 fw-lighter alex gold-soft mb-2">
                        Wachtwoord herstellen
                    </h1>
                    <p class="lead fw-normal raleway text-muted">
                        Voer je verificatiecode in en kies een nieuw wachtwoord
                    </p>
                </div>

                
                <div class="border rounded-4 p-5 bg-white shadow-sm" style="border-color: #e0dcd5;">
                    
                    @if (!Model.IsValidated)
                    {
                        <form asp-action="ValidateCode" method="post" novalidate>
                            <div class="mb-4">
                                <label asp-for="Code" class="form-label fw-semibold raleway mb-3">
                                    Verificatiecode
                                </label>
                                <input asp-for="Code" 
                                       name="Code" 
                                       required 
                                       class="form-control border-0 p-3 rounded-3" 
                                       placeholder="Voer je code in"
                                       aria-required="true"
                                       style="background-color: #f8f7f4; border: 1px solid #e0dcd5 !important;" />
                                <small class="d-block text-muted mt-2 raleway">
                                    Controleer je e-mailbox voor de verificatiecode
                                </small>
                            </div>

                            <input asp-for="Email" type="hidden" />
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert">
                            </div>

                            <button type="submit" class="glass-cta-btn w-100 py-3 fw-semibold rounded-3 mb-3">
                                Code verifiëren
                            </button>
                        </form>
                    }

                    @if (Model.IsValidated)
                    {
                        <form asp-action="ResetPassword" method="post" novalidate>
                            <div class="mb-4">
                                <label asp-for="NewPassword" class="form-label fw-semibold raleway mb-3">
                                    Nieuw Wachtwoord
                                </label>
                                <input asp-for="NewPassword" 
                                       type="password" 
                                       name="NewPassword" 
                                       required 
                                       class="form-control border-0 p-3 rounded-3" 
                                       placeholder="Minimaal 8 karakters"
                                       aria-required="true"
                                       style="background-color: #f8f7f4; border: 1px solid #e0dcd5 !important;" />
                                <small class="d-block text-muted mt-2 raleway">
                                    Gebruik hoofdletters, kleine letters en cijfers
                                </small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold raleway mb-3">
                                    Bevestig Wachtwoord
                                </label>
                                <input asp-for="ConfirmPassword" 
                                       type="password" 
                                       name="ConfirmPassword" 
                                       required 
                                       class="form-control border-0 p-3 rounded-3" 
                                       placeholder="Herhaal je wachtwoord"
                                       aria-required="true"
                                       style="background-color: #f8f7f4; border: 1px solid #e0dcd5 !important;" />
                            </div>

                            <input asp-for="Email" type="hidden" />
                            <input asp-for="IsValidated" type="hidden" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert">
                            </div>

                            <button type="submit" class="glass-cta-btn w-100 py-3 fw-semibold rounded-3 mb-3">
                                Wachtwoord Wijzigen
                            </button>
                        </form>
                    }

                    <div class="text-center pt-4 border-top" style="border-color: #e0dcd5;">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none fw-semibold raleway" style="color: #2c3e50;">
                            ← Terug naar Inloggen
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Form Controls Focus State */
    .form-control:focus {
        background-color: #fefdfb !important;
        border-color: #c9a961 !important;
        box-shadow: 0 0 0 0.2rem rgba(201, 169, 97, 0.15);
        outline: none;
    }

    /* Smooth Transitions */
    .form-control {
        transition: all 0.3s ease;
    }

    
</style>
    
