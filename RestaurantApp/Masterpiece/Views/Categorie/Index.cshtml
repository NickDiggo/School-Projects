@model CategorieListViewModel
@{
    ViewData["Title"] = "Categorie Beheren";
}
<h2 class="mb-4">Categorie beheren</h2>

@if (Model.FeedbackMessage is not null)
{
    <div class="alert @(Model.IsError ? "alert-danger" : "alert-success")">
        @Model.FeedbackMessage
    </div>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
    <thead>
        <tr>
            <th>Naam</th>
            <th>Actief</th>
            <th>Type</th>
            <th colspan="2" class="text-center">Acties</th> 
        </tr>
    </thead>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Categorien)
        {
            <tr>
                <td>@p.Naam</td>
                <td>@p.Actief</td>
                <td>@p.Type.Naam</td>
                <td class="d-flex justify-content-center gap-2">

                    <!-- EDIT -->
                    <button class="btn text-warning btn-sm edit-btn"
                            data-id="@p.Id"
                            data-naam="@p.Naam"
                            data-actief="@p.Actief"
                            data-typeid="@p.TypeId"
                            data-bs-toggle="modal"
                            data-bs-target="#editModal">
                        <i class="bi bi-pencil-square fs-5"></i>
                    </button>

                    <!-- DELETE -->
                    <button class="btn text-danger btn-sm delete-btn"
                            data-id="@p.Id"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="bi bi-trash fs-5"></i>
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4 class="mt-4">Nieuwe categorie toevoegen</h4>

<form asp-action="Create" class="m-3">
    <div class="row g-3">
        <div class="col-md-5">
            <label asp-for="CreateCategorie.Naam" class="form-label fw-bold"></label>
            <input asp-for="CreateCategorie.Naam" class="form-control" />
        </div>

        <div class="col-md-5">
            <label asp-for="CreateCategorie.Actief" class="form-check-label fw-bold">Actief</label>
            <div class="form-check">
                <input asp-for="CreateCategorie.Actief"
                       class="form-check-input" />
            </div>
        </div>
        <div class="col-md-5">
            <label asp-for="CreateCategorie.TypeId"
                   class="form-label fw-bold">Type</label>

            <select asp-for="CreateCategorie.TypeId"
                    asp-items="Model.Types"
                    class="form-select">

                <option value="">-- Selecteer type --</option>
            </select>
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Toevoegen</button>
        </div>
    </div>
</form>


<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered mt-5">
        <div class="modal-content">
            <form asp-action="Edit">
                <div class="modal-header">
                    <h5 class="modal-title">Categorie bewerken</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" asp-for="EditCategorie.Id" id="edit-id" />

                    <div class="mb-3">
                        <label asp-for="EditCategorie.Naam" class="form-label fw-bold"></label>
                        <input asp-for="EditCategorie.Naam" class="form-control" id="edit-naam" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="EditCategorie.Actief" class="form-label fw-bold">Actief</label>
                        <div class="form-check">
                            <input asp-for="EditCategorie.Actief"
                                   class="form-check-input"
                                   id="edit-actief" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCategorie.TypeId"
                               class="form-label fw-bold">Type</label>

                        <select asp-for="EditCategorie.TypeId"
                                asp-items="Model.Types"
                                class="form-select">

                            <option value="">-- Selecteer type --</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Opslaan</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3 text-center">
            <h5 class="mb-3">Weet je zeker dat je deze parameter wilt verwijderen?</h5>

            <form asp-action="Delete" method="post">
                <input type="hidden" id="deleteId" name="id" />

                <button type="submit" class="btn btn-danger mt-2 w-100">Ja, verwijderen</button>
                <button type="button" class="btn btn-secondary mt-2 w-100" data-bs-dismiss="modal">Annuleer</button>
            </form>
        </div>
    </div>
</div>


<script>
    // Fill edit modal fields
    document.querySelectorAll('.edit-btn').forEach(button => {
        button.addEventListener('click', () => {
            document.getElementById('edit-id').value = button.dataset.id;
            document.getElementById('edit-naam').value = button.dataset.naam;
            document.getElementById('edit-actief').checked =
                button.dataset.actief === "True";

            document.querySelector(
                '#editModal select[name="EditCategorie.TypeId"]'
            ).value = button.dataset.typeid;
        });
    });

    // Fill delete modal with selected id
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', () => {
            document.getElementById('deleteId').value = button.dataset.id;
        });
    });
</script>
