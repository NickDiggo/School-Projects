@model EnqueteViewModel

@{
    ViewData["Title"] = "Nieuwe beoordeling";
}

@if (ViewBag.IsEdit)
{
    <div class="alert alert-info">
        U heeft deze enquête al ingevuld. U kan uw beoordeling aanpassen.
    </div>
}

<div class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="p-4 rounded shadow-sm bg-blue-soft" style="max-width:700px; width:100%;">
        <h2 class="text-center twinkle gold-soft mb-4">Beoordeling invullen</h2>

        <form asp-action="Enquete" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="Sterren" class="form-label gold-soft"></label>
                        <select asp-for="Sterren" class="form-select">
                            <option value="">-- Kies aantal sterren --</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <span asp-validation-for="Sterren" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="Opmerkingen" class="form-label gold-soft"></label>
                        <textarea asp-for="Opmerkingen" rows="4" class="form-control" placeholder="Eventuele opmerkingen..."></textarea>
                        <span asp-validation-for="Opmerkingen" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="d-flex justify-content-between gap-2">
                <button type="submit" class="btn bg-blue-deep gold raleway border-gold border border-1 flex-fill">
                    Indienen
                </button>
            </div>
        </form>
    </div>
</div>