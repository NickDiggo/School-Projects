@{
    ViewBag.Title = "Toegang Geweigerd";
    Layout = "_Layout";
}

<!-- Added full-screen background wrapper -->
<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #f8f7f4; z-index: -1;"></div>

<section class="py-5" style="display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <!-- Card -->
                <div class="border rounded-4 p-5 bg-white shadow-sm" style="border-color: #e0dcd5;">
                    
                    <!-- Header -->
                    <div class="text-center mb-5">
                        <div class="mb-4">
                            <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin: 0 auto; display: block;">
                                <path d="M32 2C15.4 2 2 15.4 2 32s13.4 30 30 30 30-13.4 30-30S48.6 2 32 2zm0 54c-13.3 0-24-10.7-24-24S18.7 8 32 8s24 10.7 24 24-10.7 24-24 24zm3.5-35h-7v14h7v-14zm0 18h-7v-4h7v4z" fill="#d9534f"/>
                            </svg>
                        </div>
                        <h1 class="display-5 fw-lighter alex mb-3" style="color: #d9534f;">
                            Toegang Geweigerd
                        </h1>
                        <p class="lead fw-normal raleway text-muted">
                            Je hebt geen toestemming voor deze pagina
                        </p>
                    </div>

                    <!-- Message -->
                    <div class="alert rounded-3 p-4 mb-4" style="background-color: #fdf8f6; border: 1px solid #d9534f; border-left: 4px solid #d9534f;">
                        <p class="raleway mb-0" style="color: #2c3e50;">
                            Het spijt ons, maar je hebt geen toestemming om deze inhoud te openen. Probeer opnieuw of neem contact op met de beheerder als je denkt dat dit een fout is.
                        </p>
                    </div>

                    <!-- Back to Home Link -->
                    <div class="text-center pt-4">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none fw-semibold raleway" style="color: #2c3e50;">
                            ‚Üê Terug naar Startpagina
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>