@model List<string>
@{
	ViewData["Title"] = "Galerij";
}

<h1>Galerij</h1>

<div id="galerijCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="7000" data-bs-pause="false" >

    <div class="carousel-inner" style="border-radius: 24px;">

        @for (int i = 0; i < Model.Count; i++)
        {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Model[i]" class="d-block carousel-item-img" alt="image @i" />
                </div>
        }

    </div>

    <button class="carousel-control-prev" type="button"
            data-bs-target="#galerijCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" style="display: none !important;" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button"
            data-bs-target="#galerijCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" style="display: none !important;" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
                <button type="button"
                        data-bs-target="#galerijCarousel"
                        data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "") bg-blue-deep" style="height: 4px"
                        aria-current="@(i == 0 ? "true" : "false")">
                </button>
        }
    </div>

</div>
@if (User.IsInRole("Eigenaar"))
{    
    <div class="mt-4">
        <a asp-action="Edit" class="btn bg-blue-deep gold raleway border-gold border border-1 fs-3">
            Aanpassen
        </a>
    </div>
}