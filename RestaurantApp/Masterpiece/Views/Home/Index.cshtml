@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}
@model List<Restaurant.ViewModels.EnqueteBeheerViewModel>
<!-- DEV comment: "Will tweak/replace in final stage. Niet volledig responsive.-->
<section id="hero" class="hero-section d-flex align-items-center">
    <div class="container d-flex justify-content-center">
        <div class="hero-card position-relative">
            <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner overflow-hidden" style="border-radius: 24px;">
                    <div class="carousel-item active">
                        <img src="~/img/car1.jpg" class="d-block w-100" alt="Hero beeld 1" />
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/car3.jpg" class="d-block w-100" alt="Hero beeld 2" />
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/car4.jpg" class="d-block w-100" alt="Hero beeld 3" />
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/car5.jpg" class="d-block w-100" alt="Hero beeld 4" />
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
                    </div>
                </div>
            </div>

            <p class="hero-overlay-title lead fw-normal twinkle text-white fs-3"
               style="background: rgba(0,0,0,0.7); padding: 0.5rem 1rem; border-radius: 12px;">
                Fine Dining, Easy Going.
            </p>

            <a href="#about-mini"
               class="hero-overlay-btn btn btn-outline-warning btn-lg">
                Ontdek ons
            </a>
        </div>
    </div>
</section>

<section id="about-mini" class="py-5 bg-light">
    <div class="container py-5">
        <div class="row align-items-center gy-4">
            <div class="col-lg-6">
                <h1 class="">Over Masterpiece</h1>
                <p class="mb-3">
                    Masterpiece is een intiem restaurantconcept met focus op smaak, beleving en
                    persoonlijke service. Onze chef werkt met seizoensproducten en een beperkte
                    kaart, zodat elke creatie tot in de puntjes klopt.
                </p>
                <p class="mb-4">
                    We combineren klassieke technieken met moderne accenten en presenteren
                    gerechten die herkenbaar zijn, maar toch verrassen.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-6">
                        <div class="border rounded-3 p-3 h-100">
                            <h2>Seizoenskeuken</h2>
                            <p class="small mb-0">Elke kaart is afgestemd op het seizoen voor maximale smaak en versheid.</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded-3 p-3 h-100">
                            <h2>Intieme setting</h2>
                            <p class="small mb-0">Beperkt aantal couverts voor rust, aandacht en maatwerk.</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded-3 p-3 h-100">
                            <h2>Wijn &amp; pairing</h2>
                            <p class="small mb-0">Suggesties op maat van je menu en voorkeur.</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded-3 p-3 h-100">
                            <h2 class="">Feesten &amp; events</h2>
                            <p class="small mb-0">Formules voor groepen, communies, bedrijfsdiners en meer.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="reserveer" class="reserveer-section text-light text-center">
    <div class="reserveer-overlay py-5">
        <div class="container py-4">
            <h2 class="">
                Reserveer je tafel
            </h2>
            <p class="lead mb-4 ice-soft">
                Een speciaal moment verdient een bijzondere setting. Boek je tafel eenvoudig online
                en wij doen de rest.
            </p>
            <a asp-controller="Reservatie" asp-action="Reserveren" class="hero-overlay-btn btn btn-outline-warning btn-lg">
                Start je reservatie
            </a>
        </div>
    </div>
</section>

<section id="contact-mini" class="py-5 bg-white">
    <div class="container">
        <div class="row gy-4 align-items-center">
            <div class="col-lg-6">
                <h2>Contact &amp; openingsuren</h2>
                <p class="mb-3">
                    Vragen over allergenen, een voorstel op maat of een groepsreservatie?
                    We denken graag met je mee.
                </p>
                <ul class="list-unstyled mb-4">
                    <li><strong>Adres:</strong> Straatnaam 1, 0000 Stad</li>
                    <li><strong>Telefoon:</strong> 012 34 56 78</li>
                    <li><strong>Email:</strong> info@masterpiece.example</li>
                </ul>
                @if (Model == null || !Model.Any())
                {
                    <p>Geen enquêtes beschikbaar.</p>
                }
                else
                {
                    <div id="enqueteCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000" data-bs-pause="false">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var enquete = Model[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="card text-center shadow-sm mx-auto" style="width: 500px; height: 250px;" >
                                        <div class="card-body">
                                            <h5 class="card-title">@enquete.KlantNaam</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">@enquete.Datum.ToString("dd/MM/yyyy")</h6>
                                            <p class="card-text">
                                                @for (int j = 0; j < enquete.EvaluatieAantalSterren; j++)
                                                {
                                                    <span class="text-warning">★</span>
                                                }
                                                @for (int j = enquete.EvaluatieAantalSterren; j < 5; j++)
                                                {
                                                    <span class="text-secondary">☆</span>
                                                }
                                            </p>
                                            <p class="card-text">@enquete.EvaluatieOpmerkingen</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

            </div>
            <div class="col-lg-6">
                <div class="border rounded-3 p-4">
                    <h5 class="fw-semibold mb-3">Snelle vraag?</h5>
                    <p class="small mb-3">
                        Laat je gegevens achter en we nemen zo snel mogelijk contact met je op.
                        (Mock-formulier, nog geen backend nodig voor de opdracht.)
                    </p>
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="miniName">Naam</label>
                            <input type="text" class="form-control" id="miniName" placeholder="Je naam" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="miniEmail">Email</label>
                            <input type="email" class="form-control" id="miniEmail" placeholder="je@email.be" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="miniMessage">Bericht</label>
                            <textarea class="form-control" id="miniMessage" rows="3" placeholder="Je vraag of opmerking"></textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
