@model MailAanpassenViewModel


<div class="container-fluid py-5">
    <div class="mb-4">
        <h1 class="h3 fw-bold text-dark">Mail Aanpassen</h1>
        <p class="text-muted">Wijzig de details van je geselecteerde mail</p>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card border border-2 shadow-sm rounded">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0 text-dark">Mail Details</h5>
                </div>

                <div class="card-body">
                    <form asp-action="MailsAanpassen" method="post">
                        <div class="mb-3">
                            <label asp-for="Naam" class="form-label fw-semibold text-dark">Mail Naam</label>
                            <input asp-for="Naam" class="form-control form-control-md" placeholder="Voer de mail naam in..." />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Onderwerp" class="form-label fw-semibold text-dark">Onderwerp</label>
                            <input asp-for="Onderwerp" class="form-control form-control-md" placeholder="Voer het mail onderwerp in..." />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Body" class="form-label fw-semibold text-dark">Mail Inhoud</label>
                            <textarea asp-for="Body" class="form-control" rows="10" placeholder="Voer de mail inhoud in..."></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-success btn-md px-4" type="submit">
                                <i class="bi bi-check-circle me-2"></i>Pas Aan
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-md px-4">
                                <i class="bi bi-x-circle me-2 "></i>Annuleer
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>