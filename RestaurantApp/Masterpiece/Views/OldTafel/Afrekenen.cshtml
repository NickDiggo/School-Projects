@model List<AfrekenenViewModel>

@{
    ViewData["Title"] = "Reservaties per Tafel";
}

<h2>Reservaties per Tafel</h2>

@foreach (var tafel in Model.OrderBy(t => t.TafelNummer))
{
    <h3 class="mt-4">Tafel @tafel.TafelNummer</h3>

    <table class="table table-striped table-consistent">
        <thead>
            <tr>
                <th>Klant</th>
                <th>Datum</th>
                <th>Totaal</th>
                <th>Status</th>
                <th>Afrekenen</th>
                <th>Reset</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var res in tafel.Reservaties)
            {
                <tr>
                    <td>@res.Naam</td>
                    <td>@res.Datum?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@res.Totaal.ToString("0.00") €</td>
                    <td>
                        @if (res.IsBetaald)
                        {
                            <span class="badge bg-success">Betaald</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Openstaand</span>
                        }
                    </td>
                    <td>
                        @if (!res.IsBetaald)
                        {
                            <a class="btn btn-primary btn-sm"
                               href="@Url.Action("Afrekenen", "Bestelling", new { reservatieId = res.Id })">
                                Afrekenen
                            </a>
                        }
                    </td>
                    <td>
                        <form asp-action="ResetRekening" method="post">
                            <input type="hidden" name="reservatieId" value="@res.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Reset</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
